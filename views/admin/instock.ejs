
<%- include('../partials/header')  -%> 
<%- include('../partials/sidebar')  -%>
            <!-- ----------- main wrapper -------------->
            <div class="col-md-10 py-4">
                <div class="row">
                    <div class="col py-2 text-center text-primary">
                       <h1> <i class="fas fa-arrow-circle-up"></i> In stock Products</h1>
                    </div>
                 </div>
                 <div class="row">
                     <div class="col">
                         <div class="card">
                             <div class="card-body">
                                 <table class="table table-striped table-hover table-bordered" id="dataTable">
                                     <thead class="thead-dark">
                                        <tr>
                                            <th>SKU</th>
                                            <th>Name</th>
                                            <th>Price</th>
                                            <th>stock</th>
                                            <th>Action</th>
                                        </tr>
                                     </thead>
                                     <tbody>
                                         <% products.forEach(pro => {   %> 
                                            <tr>
                                                <td> <%= pro.sku %> </td>
                                                <td><%= pro.title %></td>
                                                <td><%= pro.newPrice %></td>
                                                <td><%= pro.newStock %></td>
                                                <td class="d-flex flex-row"><a target="black" class="btn btn-primary mx-2" href="<%= pro.url %> "><i class="fas fa-eye"></i></a>
                                                   <form action="/delete/product/<%= pro.id %>?_method=DELETE" class="form-inline" method="POST">
                                                       <input type="hidden" name="_method" value="DELETE">
                                                       <button style="cursor: pointer;" type="submit" class="btn btn-danger p-2"><i class="fas fa-trash"></i></button>
                                                   </form>
                                                  
                                               </td>
                                            </tr>
                                        <%  })  %> 
                                      
                                       
                                     </tbody>

                                 </table>
                             </div>
                         </div>
                     </div>
                 </div>

            </div>
           
         </div>
            

   
<%- include('../partials/footer')  -%> 

